# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
CLOUDINARY_URL=your-cloudinary-url
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-token

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
# Webhook secret from Stripe Dashboard > Developers > Webhooks
# Endpoint should be: https://fabrowx-website.vercel.app/api/stripe/webhook/
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Xero OAuth2 Configuration
XERO_CLIENT_ID=your_client_id_here
XERO_CLIENT_SECRET=your_client_secret_here
XERO_REDIRECT_URI=http://localhost:3000/api/xero/callback
# These values are used by the webhook handler
XERO_TENANT_ID=your_tenant_id_here
XERO_ACCESS_TOKEN=your-access-token
XERO_REFRESH_TOKEN=your-refresh-token
XERO_EXPIRES_AT=your-expiry-timestamp
# Xero invoice theme IDs
XERO_ONLINE_THEME_ID=your-online-theme-id
XERO_WORKSHOP_THEME_ID=your-workshop-theme-id

# Stripe Connect OAuth (Legacy)
STRIPE_CLIENT_ID=ca_your_client_id_here
STRIPE_ACCOUNT_ID=acct_your_account_id_here

# Application Settings
NEXT_PUBLIC_BASE_URL=http://localhost:3000 